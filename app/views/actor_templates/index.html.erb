<h1>List of all Actors</h1>

<table border="1">
  <tr>
    <th>Id</th>
    <th>Image</th>
    <th>Name</th>
    <th>Dob</th>
    <th><th>
  </tr>
  <% Actor.order({ dob: :asc}).each do |an_actor| %>
    <tr>
      <td><%=an_actor.id %></td>
      <td><img src="<%= an_actor.image %>" alt="<%= an_actor.name %>" style="width:250px"></img></td>
      <td><%= an_actor.name %></td>
      <td><%= an_actor.dob %></td>
      <td><a href="/actors/<%= an_actor.id %>">Show details</a></td>
    </tr>
  <% end %>
</table>
